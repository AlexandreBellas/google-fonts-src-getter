{
  "name": "google-fonts-src-getter",
  "version": "1.0.0",
  "description": "A getter of the src attribute when querying the Google Fonts API.",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "npm run build && jest --config jest.config.ts",
    "test:coverage": "jest --config jest.config.ts --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexandreBellas/google-fonts-src-getter.git"
  },
  "keywords": [
    "javascript",
    "api",
    "php",
    "typescript",
    "csharp",
    "integration",
    "js",
    "erp",
    "ts",
    "nfe",
    "sefaz",
    "bling",
    "bling-erp"
  ],
  "author": "AlexandreBellas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlexandreBellas/google-fonts-src-getter/issues"
  },
  "homepage": "https://github.com/AlexandreBellas/google-fonts-src-getter#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "globals": "^15.12.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "@types/chance": "^1.1.6",
    "@types/jest": "^29.5.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/parser": "^6.14.0",
    "chance": "^1.1.11",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1"
  }
}